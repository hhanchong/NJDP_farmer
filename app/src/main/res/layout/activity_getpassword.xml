<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="com.njdp.njdp_farmer.getpassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/get_password_top"
        android:background="#03601F"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/getback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chevron_left_white_48dp"/>
        <TextView
            android:id="@+id/title"
            style="@style/Pages_Title"
            android:text="找回密码"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/get_password_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/get_password_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <!--<TextView
            android:id="@+id/farmer_user_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="请输入姓名"
            android:textSize="26dp"/>
        <EditText
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:id="@+id/user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/farmer_user_input"
            android:singleLine="true"
            android:inputType="number" />-->
        <TextView
            android:id="@+id/farmer_telephone_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="请输入手机号"
            android:textSize="26dp"/>
        <EditText
            android:id="@+id/user_telephone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:layout_below="@id/farmer_telephone_input"
            android:singleLine="true"
            android:inputType="phone"
            android:maxLength="11"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/user_verification_code"
            android:layout_below="@+id/user_telephone"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <EditText
                android:textCursorDrawable="@drawable/login_cursor"
                android:background="@drawable/register_edit"
                android:id="@+id/user_VerifyCode"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_vpn_key_grey600_24dp"
                android:drawablePadding="5dp"
                android:hint="验证码"
                android:maxLength="6"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:inputType="number"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#808080"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/btn_get_verificationCode"
                android:layout_toLeftOf="@+id/btn_get_verificationCode"
                android:id="@+id/line" />
            <Button
                style="@style/Register_Button_Vertify"
                android:id="@+id/btn_get_verificationCode"
                android:text="获取验证码" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="#728ea3"
            android:layout_below="@+id/user_verification_code"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:id="@+id/get_password_bottom"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="#728ea3" />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_getPassword_next"
            android:onClick="getPassword_next"
            android:text="下一步"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            bootstrap:bootstrapBrand="success"
            bootstrap:bootstrapSize="xl"
            bootstrap:buttonMode="regular"
            bootstrap:showOutline="false"
            bootstrap:roundedCorners="true"/>
    </RelativeLayout>
</RelativeLayout>
