<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.njdp.njdp_farmer.Edit_Password">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/get_password_top"
        android:background="#03601F"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/getback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chevron_left_white_48dp"/>
        <TextView
            android:id="@+id/title"
            style="@style/Pages_Title"
            android:text="修改密码"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/forgetPassword2_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/get_password_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/oldPassword_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="请输入原密码"
            android:textSize="18dp"/>
        <EditText
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:id="@+id/user_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:layout_below="@id/oldPassword_input"
            android:singleLine="true"
            android:inputType="textPassword" />
        <ImageButton
            android:id="@+id/reveal_button0"
            android:onClick="revealClick0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_default"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/user_oldpassword"
            android:layout_alignRight="@+id/user_oldpassword"
            android:layout_alignEnd="@+id/user_oldpassword" />
        <ImageButton
            android:id="@+id/show_button0"
            android:onClick="showClick0"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_on"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/user_oldpassword"
            android:layout_alignRight="@+id/user_oldpassword"
            android:layout_alignEnd="@+id/user_oldpassword" />
        <TextView
            android:id="@+id/forgetPassword2_password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_oldpassword"
            android:layout_marginTop="5dp"
            android:text="请输入新密码"
            android:textSize="18dp"/>
        <EditText
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:layout_below="@id/forgetPassword2_password_input"
            android:singleLine="true"
            android:inputType="textPassword" />
        <ImageButton
            android:id="@+id/reveal_button"
            android:onClick="revealClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_default"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/user_password"
            android:layout_alignRight="@+id/user_password"
            android:layout_alignEnd="@+id/user_password" />
        <ImageButton
            android:id="@+id/show_button"
            android:onClick="showClick"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_on"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/user_password"
            android:layout_alignRight="@+id/user_password"
            android:layout_alignEnd="@+id/user_password" />
        <TextView
            android:id="@+id/forgetPassword2_password2_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_password"
            android:layout_marginTop="5dp"
            android:text="请再次输入新密码"
            android:textSize="18dp"/>
        <EditText
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:id="@+id/user_password2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:layout_below="@id/forgetPassword2_password2_input"
            android:singleLine="true"
            android:inputType="textPassword" />
        <ImageButton
            android:id="@+id/reveal_button2"
            android:onClick="revealClick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_default"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/user_password2"
            android:layout_alignRight="@+id/user_password2"
            android:layout_alignEnd="@+id/user_password2" />
        <ImageButton
            android:id="@+id/show_button2"
            android:onClick="showClick2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_on"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/user_password2"
            android:layout_alignRight="@+id/user_password2"
            android:layout_alignEnd="@+id/user_password2" />
        <Button
            android:id="@+id/finish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_green_button"
            android:layout_below="@+id/user_password2"
            android:text="完  成"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp"/>
    </RelativeLayout>
    <Button
        style="@style/Login_BtnForgetPassword"
        android:id="@+id/forget_password"
        android:onClick="get_password"
        android:text="通过绑定的手机修改密码"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
