<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".login">

    <RelativeLayout
        style="@style/Login_Top"
        android:id="@+id/login_top">
        <TextView
            style="@style/Top_Title"
            android:text="智慧农机"
            android:id="@+id/login_top_title"/>
        <Button
            style="@style/Login_BtnRegister"
            android:id="@+id/register_button"
            android:onClick="register_user"
            android:text="注册"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/Login_Div"
        android:id="@+id/login_div"
        android:layout_below="@+id/login_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            style="@style/Login_InputTitle"
            android:id="@+id/login_user_input"
            android:text="手机号"
            android:layout_alignParentTop="true"/>
        <EditText
            style="@style/Login_Input"
            android:id="@+id/user_username"
            android:layout_below="@id/login_user_input"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:hint="请输入注册手机号"
            android:inputType="phone"
            android:maxLength="11" />
        <TextView
            style="@style/Login_InputTitle"
            android:id="@+id/login_password_input"
            android:layout_below="@id/user_username"
            android:text="密码" />
        <EditText
            style="@style/Login_Input"
            android:id="@+id/user_password"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:layout_below="@id/login_password_input"
            android:password="true"
            android:inputType="textPassword"
            android:maxLength="16"
            android:hint="请输入密码" />
        <ImageButton
            android:id="@+id/reveal_button"
            android:onClick="revealClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_default"
            android:layout_marginBottom="@dimen/login_ImageButton_marginBottom5"
            android:layout_alignBottom="@+id/user_password"
            android:layout_alignRight="@+id/user_password"
            android:layout_alignEnd="@+id/user_password" />
        <ImageButton
            android:id="@+id/show_button"
            android:onClick="showClick"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_on"
            android:layout_marginBottom="@dimen/login_ImageButton_marginBottom5"
            android:layout_alignBottom="@+id/user_password"
            android:layout_alignRight="@+id/user_password"
            android:layout_alignEnd="@+id/user_password" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/Login_Bottom"
        android:id="@+id/login_bottom">
        <View
            style="@style/Login_HorizontalLine_style"/>
        <Button
            style="@style/Login_BtnForgetPassword"
            android:id="@+id/forget_password"
            android:onClick="get_password"
            android:text="忘记密码?"
            android:layout_marginLeft="@dimen/login_ImageButton_marginLeft10"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <com.beardedhen.androidbootstrap.BootstrapButton
            style="@style/Login_BtnLogin"
            android:id="@+id/loginin_button"
            android:text="登录"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            bootstrap:bootstrapBrand="success"
            bootstrap:bootstrapSize="lg"
            bootstrap:buttonMode="regular"
            bootstrap:showOutline="false"
            bootstrap:roundedCorners="true"/>
    </RelativeLayout>
</RelativeLayout>
