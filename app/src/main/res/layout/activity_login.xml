<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/login_bg">

    <RelativeLayout
        android:id="@+id/login_top"
        android:layout_height="80dp"
        android:layout_width="match_parent">
    </RelativeLayout>
    <RelativeLayout
        style="@style/Login_Div"
        android:id="@+id/login_div"
        android:layout_below="@+id/login_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            style="@style/Login_InputTitle"
            android:id="@+id/login_user_input"
            android:text="账号"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorBlack"/>
        <EditText
            style="@style/Login_Input"
            android:id="@+id/user_username"
            android:layout_below="@id/login_user_input"
            android:textColor="@color/colorBlack"
            android:background="@drawable/selected_White"
            android:drawableLeft="@drawable/ic_person_outline"
            android:hint="请输入注册手机号"
            android:inputType="phone"
            android:maxLength="11" />
        <TextView
            style="@style/Login_InputTitle"
            android:id="@+id/login_password_input"
            android:layout_below="@id/user_username"
            android:text="密码"
            android:textColor="@color/colorBlack"/>
        <EditText
            style="@style/Login_Input"
            android:id="@+id/user_password"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/selected_White"
            android:layout_below="@id/login_password_input"
            android:drawableLeft="@drawable/ic_lock_outline"
            android:password="true"
            android:inputType="textPassword"
            android:maxLength="16"
            android:hint="请输入密码" />
        <ImageButton
            android:id="@+id/reveal_button"
            android:onClick="revealClick"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_default"
            android:layout_marginBottom="@dimen/login_ImageButton_marginBottom10"
            android:layout_alignBottom="@+id/user_password"
            android:layout_alignRight="@+id/user_password"
            android:layout_alignEnd="@+id/user_password" />
        <ImageButton
            android:id="@+id/show_button"
            android:onClick="showClick"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sign_up_reveal_on"
            android:layout_marginBottom="@dimen/login_ImageButton_marginBottom10"
            android:layout_alignBottom="@+id/user_password"
            android:layout_alignRight="@+id/user_password"
            android:layout_alignEnd="@+id/user_password" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/login_div"
        android:id="@+id/login_bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <Button
                style="@style/Login_BtnRegister"
                android:id="@+id/register_button"
                android:onClick="register_user"
                android:background="@drawable/button_normal_selector"
                android:text="注册"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />
            <Button
                style="@style/Login_BtnRegister"
                android:id="@+id/loginin_button"
                android:background="@drawable/button_normal_selector"
                android:text="登录"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>
        </LinearLayout>

    </RelativeLayout>

    <Button
        style="@style/Login_BtnForgetPassword"
        android:id="@+id/forget_password"
        android:onClick="get_password"
        android:text="忘记密码?"
        android:textColor="@color/colorWhite"
        android:background="#00000000"
        android:layout_below="@+id/login_bottom"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
