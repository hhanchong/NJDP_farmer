<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/main_bg"
    tools:context="com.njdp.njdp_farmer.address.AddressSelect"
    android:id="@+id/top_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:id="@+id/register_top"
        android:background="@drawable/top_title">
        <ImageButton
            android:id="@+id/getback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chevron_left_white_48dp"/>
        <TextView
            android:id="@+id/register_title"
            style="@style/Pages_Title"
            android:text="选择地址"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/register_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/tpop_tv"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="点击选择省市县"
            android:layout_marginLeft="5dp"
            android:editable="false"
            android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left">
            <EditText
                android:id="@+id/xiang"
                android:layout_width="120dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/xiang1"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="乡(镇)"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/xiang"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/cun"
                android:layout_width="120dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/xiang1"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="村"
                android:textSize="18dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/cun"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/Register_Div"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
        <Button
            style="@style/Register_Button_Finish"
            android:id="@+id/btn_editFinish"
            android:background="@drawable/button_normal_selector"
            android:layout_below="@+id/regiser_div"
            android:text="完  成"
            android:layout_height="wrap_content"
            android:layout_margin="30dp" />
    </LinearLayout>

</RelativeLayout>
 