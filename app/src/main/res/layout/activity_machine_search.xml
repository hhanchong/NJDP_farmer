<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/test_top_layout"
    tools:context=".conent_frament.FarmMachineSearch">
    <LinearLayout
        android:id="@+id/farmer_machine_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/top_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/select_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择查询中心"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="农机查询"
                android:textColor="@color/colorWhite"
                android:textSize="22dp"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@+id/getback"
                android:layout_centerHorizontal="true" />
            <ImageButton
                android:id="@+id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_refresh"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="查询范围"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="（公里）"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorWhite"
                    android:text="5"
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/rb10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorWhite"
                    android:text="10"
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/rb30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorWhite"
                    android:text="30"
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/rb50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorWhite"
                    android:text="50"
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/rb100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorWhite"
                    android:text="全部"
                    android:textSize="18dp"/>
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/farmer_machine_top"
        android:layout_above="@+id/machineListView"
        android:clickable="true" />

    <TextView
        android:id="@+id/machineListView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="#F1B245"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:text="共有0条农机信息，点击查看列表"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--ImageButton
        android:id="@+id/my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_my_location_grey600_36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin20"/-->
</RelativeLayout>
