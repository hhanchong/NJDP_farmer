<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="#CEA47C"
                android:startColor="#CEA47C"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#D97024"
                android:startColor="#D97024"/>
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="#D97024"
                android:startColor="#D97024"/>
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="#F98205"
                android:startColor="#F98205"/>
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="#F98205"
                android:startColor="#F98205"/>
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>
