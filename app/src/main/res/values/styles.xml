<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--主页面标题-->
    <style name="Pages_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--智能调度界面按钮-->
    <style name="item_1_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--头部标题-->
    <style name="Top_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#03601F</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--登录头部-->
    <style name="Login_Top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!--登录主体-->
    <style name="Login_Div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">55dp</item>
        <item name="android:padding">15dp</item>
    </style>
    <!--登录底部-->
    <style name="Login_Bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!--登录输入框标题-->
    <style name="Login_InputTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">22dp</item>
    </style>
    <!--登录输入框-->
    <style name="Login_Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--登录页面注册按钮-->
    <style name="Login_BtnRegister">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#03601F</item>
    </style>
    <!--登录页面报告Bug按钮-->
    <style name="Login_BtnBug">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--登录页面忘记密码按钮-->
    <style name="Login_BtnForgetPassword">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
    </style>
    <!--登录页面登录按钮-->
    <style name="Login_BtnLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!--登录页面水平线样式-->
    <style name="Login_HorizontalLine_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#696969</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <!--注册表单头部-->
    <style name="Register_Top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!--注册表单主体-->
    <style name="Register_Div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>
    <!--注册表单底部-->
    <style name="Register_Bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!--注册表单底部文字-->
    <style name="Register_Bottom_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--注册表单输入框样式-->
    <style name="Register_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <!--注册表单验证码输入框样式-->
    <style name="Register_VertifyInput_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <!--注册表单水平线样式-->
    <style name="Register_HorizontalLine_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#696969</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!--注册表单垂直线样式-->
    <style name="Register_Vertical_style">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">#808080</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <!--注册表单获取验证码按钮-->
    <style name="Register_Button_Vertify">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--注册表单完成注册按钮-->
    <style name="Register_Button_Finish">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!--个人信息表单linearlayout样式-->
    <style name="personalinformation_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!--个人信息表单.左-->
    <style name="personalinformation_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#797676</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
    </style>
    <!--个人信息表单.右-->
    <style name="personalinformation_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--个人信息水平线-->
    <style name="personalinformation_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">#ABAEA3</item>
    </style>
    <!--个人信息水平线-->
    <style name="personalinformation_line1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">#03601F</item>
    </style>
    <!--个人信息水平线-->
    <style name="personalinformation_line2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#03601F</item>
    </style>

    <!--Spinner样式-->
    <style name="spinner_style_0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

</resources>
